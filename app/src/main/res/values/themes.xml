<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stockzilla" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurfaceVariant">@color/colorBackground</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Material Components overrides -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Stockzilla.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Stockzilla.Headline2</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Stockzilla.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Stockzilla.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Stockzilla.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Stockzilla.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Stockzilla.Caption</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.Stockzilla.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Stockzilla.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Stockzilla.Subtitle1" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Stockzilla.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Stockzilla.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Stockzilla.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Stockzilla.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>